---
import Layout from "@/layouts/Layout.astro";
import LoginForm from "@/components/LoginForm";

// Redirect to home if user is logged in
import Help from "@/components/Help";
---

<Layout title="Login">
    <Help client:load mustBeAuthenticated={false} />
    <main class="flex flex-col items-center h-svh">
        <div class="mt-20 border p-10 rounded-md flex flex-col items-center">
            <h1 class="text-2xl font-bold py-3">Login</h1>
            <LoginForm client:only="react" />
            <a
                class="mt-3 text-sm text-muted-foreground hover:text-foreground"
                href="/register"
            >
                Don't have an account? Register now!</a
            >
        </div>
    </main>
